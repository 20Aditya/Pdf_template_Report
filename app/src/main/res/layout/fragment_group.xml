<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/group"
    android:layout_marginBottom="70dp"
    android:background="#EEEEEE"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_margin="15dp">


        <android.support.v7.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0097A7"
            app:cardCornerRadius="7dp"
            android:elevation="10dp"
            android:layout_marginTop="20dp">
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Initiatives"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#fff"
                />
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            android:layout_gravity="center_horizontal"

            >

            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <android.support.design.widget.TextInputLayout
                    android:id="@+id/titleWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#9E9E9E"
                    android:theme="@style/textinput"
                    android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/title"


                    android:backgroundTint="#E0E0E0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="clip_horizontal"
                    android:hint="Event's Name"

                    android:fitsSystemWindows="true"
                    android:breakStrategy="balanced"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textSize="15sp"/>
            </android.support.design.widget.TextInputLayout>

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:layout_marginTop="10dp"
                android:id="@+id/event_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event's Category"
                android:textSize="15sp"
                android:backgroundTint="#E0E0E0"
                android:textColorHint="#9E9E9E"   />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/dateWrapper"
                android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#9E9E9E"
                    android:theme="@style/textinput"
                >

                <EditText
                    android:id="@+id/date"
                    android:backgroundTint="#E0E0E0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="clip_horizontal"
                    android:hint="Date of Event"
                    android:fitsSystemWindows="true"
                    android:breakStrategy="balanced"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/timeWrapper"
                android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#9E9E9E"
                    android:theme="@style/textinput">

                <EditText
                    android:id="@+id/time"


                    android:backgroundTint="#E0E0E0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="clip_horizontal"
                    android:hint="Time"
                    android:fitsSystemWindows="true"
                    android:breakStrategy="balanced"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/venueWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#9E9E9E"
                android:theme="@style/textinput"
                >

                <EditText
                    android:id="@+id/venue"


                    android:backgroundTint="#E0E0E0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="clip_horizontal"
                    android:hint="Venue"
                    android:fitsSystemWindows="true"
                    android:breakStrategy="balanced"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textSize="15sp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/byWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#9E9E9E"
                android:theme="@style/textinput"
                >

                <EditText
                    android:id="@+id/by"


                    android:backgroundTint="#E0E0E0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="clip_horizontal"
                    android:hint="Conducted by"
                    android:fitsSystemWindows="true"
                    android:breakStrategy="balanced"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textSize="15sp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/minutesWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#9E9E9E"
                android:theme="@style/textinput" >

                <EditText
                    android:id="@+id/minutes"


                    android:backgroundTint="#E0E0E0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="clip_horizontal"
                    android:hint="Meeting Minutes"
                    android:fitsSystemWindows="true"
                    android:breakStrategy="balanced"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textSize="15sp"/>
            </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/upload"
                android:background="#fff"
                android:textColor="#0097A7"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image 1"/>


            <Button
                android:id="@+id/upload1"
                android:background="#fff"
                android:textColor="#0097A7"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image 2"/>



        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:padding="15dp"
            >
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="15dp"
                app:cardElevation="10dp"
                android:layout_marginRight="20dp"
                >
                <Button
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    android:text="Generate PDF"
                    android:background="#0097A7"
                    android:textColor="#fff"
                    android:padding="8dp"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="15dp"
                app:cardElevation="10dp"
                android:layout_marginLeft="20dp">
                <Button
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:background="#0097A7"
                    android:textColor="#fff"
                    android:padding="8dp"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>





    </LinearLayout>
</ScrollView>